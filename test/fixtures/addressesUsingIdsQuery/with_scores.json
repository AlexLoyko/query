{
  "query": {
    "function_score": {
      "query": {
        "filtered": {
          "query": {
            "bool": {
              "_name": "fallback.address",
              "must": [
                {
                  "match_phrase": {
                    "address_parts.number": "housenumber value"
                  }
                },
                {
                  "match_phrase": {
                    "address_parts.street": "street value"
                  }
                }
              ],
              "boost": 10
            }
          },
          "filter": {
            "bool": {
              "must": [
                {
                  "term": {
                    "layer": "address"
                  }
                }
              ]
            }
          }
        }
      },
      "functions": [
        { "score field 1": "score value 1" },
        { "score field 2": "score value 2" }
      ]
    }
  },
  "size": { "$": "size value" },
  "track_scores": { "$": "track_scores value" }
}
